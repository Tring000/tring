<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.RegionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:text="SearchBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RegionActivity_RecyclerView_Selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|left">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="대한민국"
            android:textStyle="bold"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RegionActivity_RecyclerView_City"
            android:layout_width="125dp"
            android:layout_height="490dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RegionActivity_RecyclerView_SubRegion"
            android:layout_width="285dp"
            android:layout_height="490dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/RegionActivity_Btn_OK"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="OK"/>




</LinearLayout>